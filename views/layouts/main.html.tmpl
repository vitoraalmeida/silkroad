{{ define "main" }}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="static/style.css">
    <title>Silk Road | Fármacia</title>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="logo">
                <a href="index.html"><img src='./img/logo.png'/></a>
            </div>
            <div class="search-box">
                <input id="search-inputText" type="text" name="" placeholder="Seja bem-vindo, o que você busca?" required="" data-invalid="" aria-invalid="true">
                <a class="search-btn" href="#">
                </a>
            </div>
            <a href="#" class="login">
                <div class="img-login">
                    <img src='./img/login.png'/>
                </div>
                <div class="text-login">
                    <strong>
                        Fazer Login <br> ou Cadastrar
                    </strong>
                </div>
            </a>
            <a href="carrinho.html" class="carrinho">
                <div class="img-carrinho">
                    <img src='./img/carrinho.png'/>
                </div>
                <div class="text-carrinho">
                    <strong>
                        Meu Carrinho <br> R$0,00
                    </strong>
                </div>
            </a>
            <div class="modal-bg">
                <form class="modal-content" action="#" method="post">
                    <div class="imgcontainer">
                        <img src='./img/avatar.png' alt="avatar" class="avatar"/>
                    </div>
                    <div class="modal">
                        <label for="uname"><b>Email</b></label>
                        <input type="text" placeholder="Digite seu email" name="uname" required>
                        <label for="psw"><b>Senha</b></label>
                        <input type="password" placeholder="Digite sua senha" name="psw" required>
                        <button class="entrar" type="submit">Entrar</button>
                        <a class="cadastrar" href="#">Cadastrar<a>
                        <span class="modal-close">X</span>
                    </div>
                </form>
            </div>
            <div class="cadastro">
                <form class="cadastro-content" id="cadastro-form" action="#" method="post">
                    <h2>Cadastrar no site</h2>
                    <div class="cadastro-modal">
                        <label for="name"><b>Nome</b></label>
                        <input type="text" placeholder="Digite seu nome" name="name" required>
                        <label for="email"><b>Email</b></label>
                        <input type="text" placeholder="Digite seu email" name="email" required>
                        <label for="cpf"><b>CPF</b></label>
                        <input type="text" placeholder="Digite seu CPF" name="estoque" required>
                        <label for="senha"><b>Senha</b></label>
                        <input type="password" placeholder="Digite sua senha" name="senha" required>
                        <button class="cadastrar-btn" type="submit">Cadastrar</button>
                        <span class="cadastro-close">X</span>
                    </div>
                </form>
            </div>
        </header>
        <!-- Main -->
        <main>
            {{ template "yield" . }}
        </main>
        <!-- Barra Lateral -->
        <aside>
            <div class="barra-lateral">
                <div class="titulo">
                    <span><img src='./img/abc.png'/><h1 style='display:inline;'>Medicamentos</h1></span>    
                </div>
                <ul>
                    <li>
                        <a href="#">PRESSÃO ALTA</a>
                    </li>
                </ul>    
            </div>
        </aside>
        <!-- Footer -->
        {{ template "footer" }}

        <script src="/static/app.js"></script>
    </div>
</body>
</html>
{{ end }}
